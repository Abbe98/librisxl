{
    "_global_settings": {
        "WHELK_WORK_DIR": "/var/run/whelk"
    },
    "_whelks": [
        {
            "defterms":{
                "_class" : "se.kb.libris.whelks.http.HttpStandardWhelk",
                "_plugins" : [
                    "definitiondata"
                    ],
                "contentRoot" : "/def/term",
                "docBaseUri" : "http://libris.kb.se/"
            }
        },
        {
            "def":{
                "_class" : "se.kb.libris.whelks.http.HttpStandardWhelk",
                "_plugins" : [
                    "pairtreehybrid",
                    "defsindex",
                    "fusekigraphstore",
                    "search",
                    "documentapi"
                    ],
                "docBaseUri" : "http://libris.kb.se/"
            }
        },
        {
            "libris":{
                "_class" : "se.kb.libris.whelks.http.HttpStandardWhelk",
                "_converters": [
                    "marcconverter"
                ],
                "_expanders": [
                    "linkexpander"
                ],
                "_importers": [
                    "oaipmhimporter"
                ],
                "_apis": [
                    "remotesearch",
                    "operator",
                    "formatter",
                    "search",
                    "completeexpander",
                    "isxntool",
                    "sparqlapi",
                    "libcount",
                    "documentapi"
                ],
                "_otherplugins": [
                    "pairtreehybrid",
                    "index",
                    "entityextractor",
                    "linkcompleter",
                    "indexlinkfinder",
                    "fusekigraphstore"
                ],
                "contentRoot" : "/",
                "docBaseUri" : "http://libris.kb.se/"
            }
        }
    ],
    "_plugins": {
        "pairtree": {
            "_class" : "se.kb.libris.whelks.component.PairtreeDiskStorage",
            "_params" : {
                "storageDir": "/data/librisxl/storage",
                "contentTypes": ["application/ld+json"]
            }
        },
        "pairtreehybrid": {
            "_class" : "se.kb.libris.whelks.component.PairtreeHybridDiskStorage",
            "_plugins" : [
                "index"
                ],
            "_params" : {
                "storageDir": "/data/librisxl/storage",
                "contentTypes": ["application/ld+json"],
                "baseStorageSuffix": "pairtree",
                "versioning" : false
            }
        }
    }
}
