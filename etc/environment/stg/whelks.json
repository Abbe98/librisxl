{
    "_whelks": [
        {
            "libris":{
                "_class" : "se.kb.libris.whelks.http.HttpStandardWhelk",
                "_converters": [
                    "marcconverter",
                    "turtleconverter"
                ],
                "_importers": [
                    "oaipmhimporter"
                ],
                "_apis": [
                    "remotesearch",
                    "operator",
                    "search",
                    "sparqlapi",
                    "libcount",
                    "completeexpander",
                    "documentapi"
                ],
                "_otherplugins": [
                    "index",
                    "pairtree",
                    "entityextractor",
                    "linkcompleter",
                    "indexlinkfinder"
                ],
                "contentRoot" : "/",
                "docBaseUri" : "http://libris.kb.se/"
            }
        },
        {
            "swepub":{
                "_class" : "se.kb.libris.whelks.http.HttpStandardWhelk",
                "_plugins" : [
                    "cassandrastorage",
                    "documentapi",
                    "modsimporter"
                    ]
            }
        },
        {
            "resource":{
                "_class" : "se.kb.libris.whelks.http.HttpStandardWhelk",
                "_plugins" : [
                    "definitiondata",
                    "resourcelist",
                    "marcmap",
                    "isxntool"
                ]
            }
        }
    ],
    "_plugins": {
        "pairtree": {
            "_class" : "se.kb.libris.whelks.component.PairtreeDiskStorage",
            "_params" : {
                "storageDir": "/data/librisxl/storage",
                "contentTypes": ["application/ld+json"]
            }
        },
        "hp04cassandrastorage": {
            "_class" : "se.kb.libris.whelks.component.CassandraStorage",
            "_params" : {
                "cassandraVersion" : "1.2.11",
                "cqlVersion" : "3.0.0",
                "versioning" : true,
                "keyspaceSuffix" : "_v2",
                "contentTypes" : [
                    "application/ld+json",
                    "application/json",
                    "text/plain"
                ]
            }
        }
    }
}
