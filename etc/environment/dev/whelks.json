{
    "_whelks": [
        {
            "libris":{
                "_class" : "se.kb.libris.whelks.http.HttpStandardWhelk",
                "_plugins": [
                    "localindex",
                    "flatstorage",
                    "search",
                    "sparqlapi",
                    "remotesearch",
                    "documentapi",
                    "marcconverter",
                    "turtleconverter",
                    "entityextractor",
                    "linkenhancer",
                    "jsonldlinkfinder",
                    "nameexpander"
                ],
                "contentRoot" : "/",
                "docBaseUri" : "http://libris.kb.se/"
            }
        },
        {
            "resource":{
                "_class" : "se.kb.libris.whelks.http.HttpStandardWhelk",
                "_plugins" : ["diskstorage", "documentapi", "resourcelist", "marcmap", "search", "isxntool"]
            }
        }
    ],
    "_plugins": [
        {
            "remotesearch": {
                "_class": "se.kb.libris.whelks.api.RemoteSearchRestlet"
            }
        },
        {
            "resourcelist": {
                "_class": "se.kb.libris.whelks.api.ResourceListRestlet"
            }
        },
        {
            "marcmap": {
                "_class": "se.kb.libris.whelks.api.MarcMapRestlet"
            }
        },
        {
            "isxntool": {
                "_class": "se.kb.libris.whelks.api.ISXNTool",
                "_params" : "_whelk:libris"
            }
        },
        {
            "localindex": {
                "_class" : "se.kb.libris.whelks.component.ElasticSearchNode",
                "_params" : "work/data",
                "_unique" : false
            }
        },
        {
            "index": {
                "_class" : "se.kb.libris.whelks.component.ElasticSearchClientIndex",
                "_unique" : false
            }
        },
        {
            "cassandrastorage": {
                "_class" : "se.kb.libris.whelks.component.CassandraStorage",
                "_params" : "application/ld+json",
                "_priority" : 0
            }
        },
        {
            "diskstorage": {
                "_class" : "se.kb.libris.whelks.component.DiskStorage",
                "_params" : {
                    "storageDir": "work/storage/jsonld",
                    "contentType": "application/ld+json"
                },
                "_priority" : 1
            }
        },
        {
            "isostorage": {
                "_class" : "se.kb.libris.whelks.component.DiskStorage",
                "_params" : {
                    "storageDir": "work/storage/iso",
                    "contentType": "application/x-marc-json"
                },
                "_priority" : 2
            }
        },
        {
            "flatstorage": {
                "_class" : "se.kb.libris.whelks.component.FlatDiskStorage",
                "_params" : {
                    "storageDir": "work/storage/main",
                    "contentType": "application/ld+json"
                },
                "_priority" : 1
            }
        },
        {
            "graphstore": {
                "_class" : "se.kb.libris.whelks.component.HttpGraphStore",
                "_params" : {
                    "graphStoreUri": "http://localhost:8084/openrdf-sesame/repositories/dev-libris/rdf-graphs/service",
                    "queryUri": "http://localhost:8084/openrdf-sesame/repositories/dev-libris/"
                },
                "_priority" : 0
            }
        },
        {
            "marcconverter" : {
                "_class" : "se.kb.libris.whelks.plugin.MarcFrameConverter"
            }
        },
        {
            "turtleconverter" : {
                "_class" : "se.kb.libris.whelks.plugin.JsonLDTurtleConverter"
            }
        },
        {
            "entityextractor" : {
                "_class" : "se.kb.libris.whelks.plugin.JsonLDEntityExtractorIndexFormatConverter",
                "_priority" : 2
            }
        },
        {
            "search" : {
                "_class" : "se.kb.libris.whelks.api.SearchRestlet",
                "_params" : {
                    "indexTypes" : {
                        "bib" : {
                            "queryFields" : [],
                            "infoFields" : [],
                            "defaultBoost" : "about.title:5,about.identifier:5,about.instanceOf.contributorList.authoritativeName:5,about.instanceOf.subject.authoritativeName:2,about.publication.name:2",
                            "sortby": {},
                            "queryFacets" : "about.@type",
                            "resultFields" : [
                                "about.@type",
                                "about.title",
                                "about.responsibilityStatement",
                                "about.publication",
                                "about.identifier",
                                "about.instanceOf.creator",
                                "about.instanceOf.contributorList"
                            ]
                        },
                        "auth": {
                            "queryFields": [],
                            "infoFields": [],
                            "defaultBoost": "",
                            "sortby": {}
                        },
                        "person" : {
                            "queryFields":[
                                "controlledLabel",
                                "label"
                            ],
                            "infoFields":[
                                "birthYear",
                                "deathYear",
                                "authorOf",
                                "hasAnnotation.about"
                            ],
                            "defaultBoost" : "controlledLabel:5",
                            "sortby": {
                                "recordPriority" : "asc",
                                "_score" : "desc",
                                "controlledLabel" : "asc"
                            }
                        },
                        "concept" : {
                            "queryFields":[],
                            "infoFields": [],
                            "defaultBoost": "prefLabel:5",
                            "sortby": {
                                "recordPriority" : "asc",
                                "_score" : "desc",
                                "prefLabel" : "asc"
                            }
                        }
                    }
                }
            }
        },
        {
            "sparqlapi" : {
                "_class" : "se.kb.libris.whelks.api.SparqlRestlet"
            }
        },
        {
            "documentapi" : {
                "_class" : "se.kb.libris.whelks.api.DocumentRestlet"
            }
        },
        {
            "nameexpander" : {
                "_class" : "se.kb.libris.whelks.api.CompleteExpander"
            }
        },
        {
            "biblistener" : {
                "_class" : "se.kb.libris.whelks.plugin.Listener",
                "_params" : "_whelk:libris"
            }
        },
        {
            "authlistener" : {
                "_class" : "se.kb.libris.whelks.plugin.Listener",
                "_params" : "_whelk:libris"
            }
        },
        {
            "jsonldlinkfinder" : {
                "_class" : "se.kb.libris.whelks.plugin.JsonLDLinkFinder"
            }
        },
        {
            "linkenhancer" : {
                "_class" : "se.kb.libris.whelks.plugin.JsonLDLinkEnhancerFormatConverter"
            }
        }
    ]
}