<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <!-- encoders are assigned the type
         ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <!-- third party components. -->
  <logger name="org.apache.camel" level="info"/>
  <logger name="org.apache.camel.component.elasticsearch" level="info"/>

  <logger name="whelk.StandardWhelk" level="info"/>
  <logger name="whelk.importer.libris.MySQLImporter" level="debug"/>
  <logger name="whelk.component.ElasticSearch" level="info"/>
  <logger name="whelk.api.SearchAPI" level="warn"/>
  <logger name="whelk.plugin.MarcCrackerAndLabelerIndexFormatConverter" level="error"/>

  <root level="info">
    <appender-ref ref="STDOUT" />
  </root>
</configuration>

