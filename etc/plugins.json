    "elastic_camel_processor": {
        "_class" : "se.kb.libris.whelks.camel.FormatConverterProcessor",
        "_plugins" : ["linkexpander", "shapecomputer", "cleanupindexconverter" ]
    },
    "turtleconverter_processor": {
        "_class" : "se.kb.libris.whelks.camel.FormatConverterProcessor",
        "_plugins" : ["turtleconverter"]
    },
    "prawnrunner_processor": {
        "_class" : "se.kb.libris.whelks.camel.PrawnRunner"
    },
    "graphstore_aggregator": {
        "_class" : "se.kb.libris.whelks.camel.GraphstoreBatchUpdateAggregationStrategy",
        "_params": "context.jsonld, http://libris.kb.se/resource/"
    },
    "routebuilder": {
        "_class" : "se.kb.libris.whelks.camel.WhelkRouteBuilder",
        "_plugins" : [
            "elastic_camel_processor", "turtleconverter_processor", "shapecomputer", "prawnrunner_processor","graphstore_aggregator"
        ],
        "_params": {
            "elasticBatchSize": 2000,
            "graphstoreBatchSize": 1000,
            "batchTimeout": 5000,
            "elasticTypes": "_property:ELASTIC_TYPES"
        }
    },
    "index": {
        "_class" : "se.kb.libris.whelks.component.ElasticSearchClient",
        "_plugins" : ["linkexpander", "shapecomputer", "cleanupindexconverter" ],
        "_params": {
            "typeConfiguration": {
                "auth" : [ "person", "organization", "conference", "concept", "conceptscheme" ],
                 "bib" : [ "text", "book", "serial" ]
            },
            "elasticHost": "_property:ELASTIC_HOST",
            "availableTypes": "_property:ELASTIC_TYPES"
        },
        "_unique" : true
    },
    "jsonldstorage": {
        "_class" : "se.kb.libris.whelks.component.PairtreeHybridDiskStorage",
        "_plugins" : [
            "shapecomputer"
            ],
        "_params" : {
            "storageDir": "_property:STORAGE_PATH",
            "elasticHost": "_property:ELASTIC_HOST",
            "contentTypes": ["application/ld+json"],
            "baseStorageSuffix": "pairtree",
            "versioning" : false
        }
    },
    "marcxmlstorage": {
        "_class" : "se.kb.libris.whelks.component.PairtreeHybridDiskStorage",
        "_plugins" : [
            "shapecomputer"
            ],
        "_params" : {
            "storageDir": "_property:STORAGE_PATH",
            "elasticHost": "_property:ELASTIC_HOST",
            "contentTypes" : [ "application/marcxml+xml" ],
            "baseStorageSuffix": "marcxml",
            "versioning" : false
        }
    },
    "graphstore": {
        "_class" : "se.kb.libris.whelks.component.HttpBatchGraphStore",
        "_plugins" : [
            "turtleconverter"
            ],
        "_params" : {
            "handlesDatasets": ["auth","bib"],
            "graphStoreUri": "_property:GRAPHSTORE_DATA_URI",
            "queryUri": "_property:GRAPHSTORE_QUERY_URI",
            "updateUri": "_property:GRAPHSTORE_UPDATE_URI",
            "contextPath": "context.jsonld",
            "baseUri": "http://libris.kb.se/resource/"
        }
    }
}
