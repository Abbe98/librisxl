{
    "mappings": {
        "_default_": {
            "_source": {
                "enabled": true
            },
            "_timestamp": {
                "enabled": true,
                "store": true
            },
            "date_detection": false,
            "dynamic_templates": [
                {
                    "type_template": {
                        "mapping": {
                            "index": "not_analyzed",
                            "type": "string"
                        },
                        "match": "@type",
                        "match_mapping_type": "string"
                    }
                },
                {
                    "id_template": {
                        "mapping": {
                            "index": "not_analyzed",
                            "type": "string"
                        },
                        "match": "@id",
                        "match_mapping_type": "string"
                    }
                },
                {
                    "name_template": {
                        "mapping": {
                            "fields": {
                                "raw": {
                                    "index": "not_analyzed",
                                    "type": "string"
                                },
                                "{name}": {
                                    "index": "analyzed",
                                    "type": "string"
                                }
                            },
                            "type": "multi_field"
                        },
                        "match": "*Name",
                        "match_mapping_type": "string"
                    }
                }
            ]
        }
    }
}
