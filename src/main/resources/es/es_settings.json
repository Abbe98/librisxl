{
    "analysis" : {
        "analyzer" : {
            "default" : {
                "tokenizer" : "standard",
                "filter" : ["lowercase", "swe_light_stemmer"],
                "stopwords" : "_none_"
            },
            "completer" : {
                "type" : "custom",
                "tokenizer" : "lowercase",
                "filter" : "custom_edge_ngram"
            },
            "fulltext_analyzer": {
                "type": "custom",
                "tokenizer": "whitespace",
                "filter": [
                    "lowercase",
                    "type_as_payload"
                ]
            }
        },
        "filter" : {
            "swe_light_stemmer" : {
                "type" : "stemmer",
                "name" : "light_swedish"
            },
            "custom_edge_ngram" : {
                "type" : "edgeNGram",
                "min_gram" : 2,
                "max_gram" : 50
            }
        }
    }
}
