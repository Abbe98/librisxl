{
    "date_detection" : false,
    "_id" : {
        "type": "string",
        "path": "encodedId"
    },
    "_timestamp" : {
        "enabled" : true,
        "store" : true
    },
    "_source" : {
        "enabled" : true
    },
    "dynamic_templates" : [
    {
        "type_template" : {
            "match" : "@type",
            "match_mapping_type" : "string",
            "mapping" : { "type" : "string", "index": "not_analyzed" }
        }
    },
    {
        "id_template" : {
            "match" : "@id",
            "match_mapping_type" : "string",
            "mapping" : { "type" : "string", "index": "not_analyzed" }
        }
    },
    {
        "plaintext_template" : {
            "match" : "label|name|notation|.+Label|.+Name|.+Value|.+Title|subtitle|title.+|.+Scheme",
            "match_pattern": "regex",
            "match_mapping_type" : "string",
            "mapping" : {
                "type"   : "multi_field",
                "fields" : {
                    "{name}" : { "type": "string", "index" : "analyzed" },
                    "stemmed" : {"type" : "string", "analyzer" : "stemmed"},
                    "untouched" : { "type" : "string", "index": "not_analyzed" }
                }
            }
        }
    },
    {
        "unknown_template" : {
            "path_match" : "_marc*.*.subfields.*",
            "match_mapping_type" : "string",
            "mapping" : { "type" : "string", "index": "not_analyzed" }
        }
    }
    ]
}
